<h1>Hello World</h1>
<%=link_to 'My Blog',controller: 'articles' %>
<%=link_to 'New Article',new_article_path %>
<h1>Listing articles</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="2"></th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Dalit This',article_path(article),
        method: :delete,
      data: { confirm: 'Are you sure you want to Delete this? '} %></td>


    </tr>
  <% end %>
</table>